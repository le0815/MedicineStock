@model MedicineStock.Models.Permission
@* @model IEnumerable<MedicineStock.Models.Account> *@
@{
    ViewData["Title"] = "Edit";
    ViewBag.Menu = "Permission";
}

<!-- header -->
<div class="page-header">
    <div class="page-title">
        <h1>Sửa quyền</h1>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Name">Mã quyền</label>
                        <input type="text" asp-for="PermissionId" readonly>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Name">Tên quyền</label>
                        <input type="text" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <button type="submit" class="btn btn-secondary">Lưu</button>
                        <button asp-action="Index" class="btn btn-primary">Huỷ</button>
                    </div>
                </div>
            </div>
        </form>
    </div>  
</div>

