@model MedicineStock.Models.Permission

@{
    ViewData["Title"] = "Create";
    ViewBag.Menu = "Permission";
}

<h1>Thêm quyền</h1>

<hr />
<div class="card">
    <div class="card-body">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Quyền</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-primary">Tạo</button>
                    <button asp-action="Index" class="btn btn-secondary">Trở về</button>
                </div>
            </form>
        </div>
    </div>
</div>


