@model IEnumerable<MedicineStock.Models.Manufacturer>

@{
    ViewData["Title"] = "Index";
    ViewBag.Menu = "Manufacturer";
}

<!-- header -->
<div class="page-header">
    <div class="page-title">
        <h2>Danh sách nhà sản xuất</h2>
        <h6>Quản lý nhà sản xuất</h6>
    </div>
    <div class="page-btn">
        <a class="btn btn-added" asp-action="Create"><img src="/assets/img/icons/plus.svg" alt="img" class="me-1">Thêm mới</a>
    </div>
</div>

<!-- search bar -->
<div class="table-top">
    <div class="search-set">
        <div class="search-input">
            <a class="btn btn-searchset"><img src="/assets/img/icons/search-white.svg" alt="img"></a>
            <input name="searchPhrase" type="search" class="form-control form-control-sm" placeholder="Tìm kiếm..." id="searchBox">
        </div>
    </div>
</div>

<table class="table" id="searchTable">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Name) *@
                Tên nhà sản xuất
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Description) *@
                Mô tả
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ManufacturerId">Chỉnh sửa</a> |
                <a asp-action="Details" asp-route-id="@item.ManufacturerId">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.ManufacturerId">Xoá</a>
            </td>
        </tr>
}
    </tbody>
</table>
