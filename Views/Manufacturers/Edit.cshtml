@model MedicineStock.Models.Manufacturer

@{
    ViewData["Title"] = "Edit";
    ViewBag.Menu = "Manufacturer";
}

<!-- header -->
<div class="page-header">
    <div class="page-title">
        <h2>Chỉnh sửa</h2>
        <h6>Chỉnh sửa nhà sản xuất</h6>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ManufacturerId" />
            <div class="row">
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Tên nhà sản xuất</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Mô tả</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <input type="submit" value="Chỉnh sửa" class="btn btn-submit me-2" />
                        <a asp-action="Index" class="btn btn-cancel">Quay về danh sách</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>