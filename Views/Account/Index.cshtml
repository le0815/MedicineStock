@model IEnumerable<MedicineStock.Models.Account>
@* @model MedicineStock.Models.Prescription *@
@{
    ViewData["Title"] = "Index";
    ViewBag.Menu = "Account";
}

<!-- header -->
<div class="page-header">
    <div class="page-title">
        <h2>Account List</h2>
        <h6>Manage your Account</h6>
    </div>
    <div class="page-btn">
        <a class="btn btn-added" asp-action="Create"><img src="/assets/img/icons/plus.svg" alt="img" class="me-1">Add New</a>
    </div>
</div>

<!-- search bar -->
<div class="table-top">
    <div class="search-set">
        <div class="search-input">
            <a class="btn btn-searchset"><img src="/assets/img/icons/search-white.svg" alt="img"></a>
            <input name="searchPhrase" type="search" class="form-control form-control-sm" placeholder="Search..." id="searchBox">
        </div>
    </div>
</div>


<div class="card mb-0">
    <div class="card-body">
        <div class="table-responsive dataview">
            <table class="table datatable " id="searchTable">
                <thead>
                    <tr>
                        <th>SNo</th>
                        <th>@Html.DisplayNameFor(model => model.AccountId)</th>
                        <th>@Html.DisplayNameFor(model => model.UserName)</th>
                        <th>@Html.DisplayNameFor(model => model.Password)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Permission)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccountId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    **********
                                </td>
                                <td>
                                    **********
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Permission.Name)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.AccountId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.AccountId">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.AccountId">Delete</a>
                                </td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
